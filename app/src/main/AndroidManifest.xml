<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tecnoinf.proyecto.grupo4.usbusdroid3.usbusdroidtrip">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MainActivity" />
        <activity android:name=".Activities.Tickets.TicketOptionsActivity" />
        <activity android:name=".Activities.Trip.TripOptionsActivity" />
        <activity android:name=".Activities.Tickets.ScanTicket.ScanTicketActivity" />
        <activity android:name=".Activities.Tickets.ScanTicket.STShowDetailsActivity" />
        <activity android:name=".Activities.Trip.StartTrip.StartTripActivity" />
        <activity android:name=".Activities.Trip.StartTrip.STResultActivity" />
        <activity android:name=".Activities.Trip.CloseTrip.CTConfirmationActivity" />
        <activity android:name=".Activities.Trip.Odometer.SetOdometerActivity" />
        <activity android:name=".Activities.Tickets.NewTicket.NewTicketActivity" />
        <activity android:name=".Activities.Tickets.NewTicket.NTBusStopSelectionActivity" />
        <activity android:name=".Activities.Tickets.NewTicket.NTConfirmationActivity" />
        <activity android:name=".Activities.Trip.RouteStop.RouteStopListActivity" />
        <activity android:name=".Activities.Tickets.CancelTicket.CancelTicketListActivity" />
        <activity android:name=".Activities.Tickets.PrintTicket.PrintTicketListActivity" />
        <activity android:name=".Activities.Tickets.PrintTicket.PTConfirmationActivity" />
    </application>

</manifest>