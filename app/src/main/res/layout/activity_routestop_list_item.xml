<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal">

    <!-- ID Label -->

    <ImageView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:id="@+id/busstopSignIV"
        android:src="@drawable/bus_stop_sign" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/routeStopNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#0c1248"
            android:visibility="visible"

            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/routeStopStatusLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/routeStopStatusTV"
                android:text="Status: "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#0c1248" />

            <TextView
                android:id="@+id/routeStopStatusTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0c1248" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>