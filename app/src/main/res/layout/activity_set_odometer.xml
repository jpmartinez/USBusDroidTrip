<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tecnoinf.proyecto.grupo4.usbusdroid3.usbusdroidtrip.Activities.Trip.Odometer.SetOdometerActivity">

    <EditText
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/odometerET"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:enabled="true"
        android:singleLine="true"
        android:textColor="#131a44"
        android:textSize="40sp"
        android:textStyle="bold"
        android:background="#adadad"
        android:textAlignment="center"
        android:editable="true"
        android:autoText="false"
        android:clickable="true"
        android:elegantTextHeight="true"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/odometer_set_reading_Button"
        android:id="@+id/odometerConfirmBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:background="#34a902"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        />
</RelativeLayout>
